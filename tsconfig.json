{
    "compilerOptions": {
        "target": "esnext",
        "module": "ESNext",
        "lib": ["es6", "esnext"],
        "allowJs": true,
        "checkJs": false,
        "jsx": "react-native",
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "~apis/*": ["apis/*"],
            "~assets/*": ["assets/*"],
            "~atoms/*": ["components/atoms/*"],
            "~blocks/*": ["components/blocks/*"],
            "~pages/*": ["components/pages/*"],
            "~hooks/*": ["hooks/*"],
            "~layouts/*": ["layouts/*"],
            "~styles/*": ["styles/*"],
            "~utils/*": ["utils/*"],
            "~components/*": ["components/*"]
        },
        "plugins": [
            {
                "name": "@styled/typescript-styled-plugin",
                "lint": {
                    "validProperties": [
                        "aspect-ratio",
                        "elevation",
                        "margin-vertical",
                        "margin-horizontal",
                        "padding-horizontal",
                        "padding-vertical",
                        "resize-mode",
                        "shadow-color",
                        "shadow-opacity",
                        "shadow-offset",
                        "shadow-radius",
                        "text-align-vertical",
                        "tint-color"
                    ]
                },
                "alias": {
                    "~assets": "./src/assets",
                    "~biz": "./src/biz",
                    "~screens": "./src/screens",
                    "~pages": "./src/pages",
                    "~components": "./src/components",
                    "~context": "./src/context",
                    "~hooks": "./src/hooks",
                    "~hook": "./src/hook",
                    "~utils": "./src/utils",
                    "~layouts": "./src/layouts",
                    "~theme": "./src/theme.ts",
                    "~atoms": "./src/atoms",
                    "~defaultStyle": "./src/defaultStyle"
                }
            }
        ]
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
    "include": ["./**/*", "./*", ".eslintrc.js"]
}
